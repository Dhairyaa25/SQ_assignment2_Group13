@page
@model FinalProject.Pages.ReserveModel

<h1>Reservation Form</h1>

<form method="post">
    <div class="form-group">
        <label for="car">Select a Car:</label>
        <select class="form-control" asp-for="Reservation.CarId">
            <option value="">-- Select Car --</option>
            @foreach (var car in Model.AvailableCars)
            {
                <option value="@car.Id">@car.Brand - @car.Model</option>
            }
        </select>
    </div>
  
    <div class="form-group">
        <label for="userName">Name:</label>
        <input type="text" class="form-control" asp-for="Reservation.UserName" required />
    </div>

    <div class="form-group">
        <label for="contactInfo">Contact Info:</label>
        <input type="text" class="form-control" asp-for="Reservation.ContactInfo" required />
    </div>

    <div class="form-group">
        <label for="reservationDateTime">Reservation Date/Time:</label>
        <input type="datetime-local" class="form-control" asp-for="Reservation.ReservationDateTime" required />
    </div>
 
    <button type="submit" class="btn btn-primary">Confirm Reservation</button>
</form>
