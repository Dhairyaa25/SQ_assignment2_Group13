@page
@model PlantNurseryInventory.Pages.EditModel
@{
    ViewData["Title"] = "Edit Inventory Item";
}

<h2>@(Model.InventoryItem?.ItemName == null ? "Add" : "Edit") Item</h2>

<form method="post">
    <div class="mb-3">
        <label class="form-label">Item Name</label>
        <input type="text" class="form-control" asp-for="InventoryItem.ItemName" required>
    </div>
    <div class="mb-3">
        <label class="form-label">Quantity in Stock</label>
        <input type="number" class="form-control" asp-for="InventoryItem.QuantityInStock" required>
    </div>
    <div class="mb-3">
        <label class="form-label">Price Per Unit</label>
        <input type="text" class="form-control" asp-for="InventoryItem.PricePerUnit" required>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
